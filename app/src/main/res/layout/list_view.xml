<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/routename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="defaultroute"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/routedirection1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="defaultdirection1"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/routedistance1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="defaultdistance1"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/routetime1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="defaulttime1"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/routedirection2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="defaultdirection2"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/routedistance2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="defaultdistance2"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/routetime2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="defaulttime2"
                android:textSize="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
